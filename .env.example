APP_ENV=development
APP_URL=http://localhost
SESSION_NAME=parcel_tracker_sid

# MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=parcel_tracker
DB_USER=parcel_tracker
DB_PASS=change_me

# OAuth (optional)
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_GITHUB_REDIRECT_URI=
OAUTH_DISCORD_CLIENT_ID=
OAUTH_DISCORD_CLIENT_SECRET=
OAUTH_DISCORD_REDIRECT_URI=

# Live tracking provider
# Options: ship24 | aftership | openai
TRACKING_PROVIDER=ship24

# Live tracking (Ship24 - free starter plan available)
SHIP24_API_KEY=
SHIP24_API_BASE=https://api.ship24.com/public/v1

# Live tracking (AfterShip - optional fallback)
AFTERSHIP_API_KEY=
AFTERSHIP_API_BASE=https://api.aftership.com
AFTERSHIP_API_VERSION=2026-01

# Live tracking (OpenAI web lookup - best effort)
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_TRACKING_MODEL=gpt-4.1-mini
OPENAI_TRACKING_WEB_SEARCH=1

# Password reset email
MAIL_FROM_EMAIL=no-reply@example.com
MAIL_FROM_NAME="Parcel Tracker"
RESET_TOKEN_TTL_MINUTES=60

# Ops / diagnostics
ENABLE_HEALTH_ENDPOINT=0
